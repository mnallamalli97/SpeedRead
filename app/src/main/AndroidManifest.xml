<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mnallamalli97.speedread">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppFullScreenTheme">

    <activity
        android:name=".SplashScreenActivity"
        android:configChanges="orientation"
        android:label="@string/app_name"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation"
            android:label="Edit speed of words screen"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".news.NewsActivity"
            android:configChanges="orientation"
            android:label="View the main stories of the day"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".news.NewsDetailActivity"
            android:configChanges="orientation"
            android:label="Option to select how you want to read it"
            android:screenOrientation="portrait"></activity>


        <activity
            android:name=".LibraryActivity"
            android:configChanges="orientation"
            android:label="The place to pick out a book"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".CheckoutActivity"
            android:configChanges="orientation"
            android:label="The place to buy the books you want to read"
            android:screenOrientation="portrait"></activity>


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5670228311791173~9340135910"/>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

    </application>

</manifest>