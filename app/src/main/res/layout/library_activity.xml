<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/discoveryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/brandon_medium"
                android:text="Discover"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tourRV"
                android:layout_width="match_parent"
                android:layout_height="552dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@+id/icons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discoveryTitle"
                />

            <LinearLayout
                android:id="@+id/icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >
                <TableLayout
                    android:id="@+id/discoveryPageButtonGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <Button
                            android:id="@+id/selectChapterButton"
                            android:layout_width="0dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="select Chapter"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/discoveryPageUpgradeButton"
                            android:layout_width="0dp"
                            android:text="Upgrade to full"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <Button
                            android:id="@+id/discoveryPageNewsButton"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="latest news"
                            android:drawableLeft="@drawable/icon_news"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/discoveryPageUploadButton"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Device import"
                            android:drawableLeft="@drawable/ic_cloud_upload_black_72dp"
                            android:drawableTint="#ffffff"
                            android:layout_weight="1" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/top10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/brandon_medium"
        android:text="Top Sellers"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icons"
        />

        <com.example.mnallamalli97.speedread.NonScrollListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.example.mnallamalli97.speedread.NonScrollListView>




    </LinearLayout>
</androidx.core.widget.NestedScrollView>